@model TestDemo.Models.Operation

    <form asp-controller="Calculator" asp-action="Mortgage" method="post">
        <div class="form-group">
            <label asp-for="Number1">Loan Amount</label>
            <input type="number" class="form-control" asp-for="Number1" aria-describedby="NumberHelp" placeholder="000, 000, 000">
            <!--<small id="emailHelp" class="form-text text-muted">Enter the loan amount</small>-->
        </div>
        <div class="form-group">
            <label asp-for="Number2">Down Payment</label>
            <input type="number" class="form-control" asp-for="Number2" aria-describedby="NumberHelp" placeholder="000, 000, 000">
            <!--<small id="emailHelp" class="form-text text-muted">Enter the loan amount</small>-->
        </div>
        <div class="form-group">
            <label asp-for="Number3">interest Rate</label>
            <input type="number" class="form-control" asp-for="Number3" aria-describedby="NumberHelp" placeholder="%%">
            <!--<small id="emailHelp" class="form-text text-muted">Enter the loan amount</small>-->
        </div>


        <div class="form-group">
            <label asp-for="Number4">Year</label>
            <select class="form-control" asp-for="Number4">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="row">
            <label asp-for="Result" class="col-lg-3">Your Monthly Payment $ </label>
            <input type="number" disabled="disabled" class="col-lg-3" asp-for="Result" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
